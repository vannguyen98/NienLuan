extends layout

block content
  include navbar.pug
  // END nav
  section.hero-wrap.hero-wrap-2(style="background-image: url('images/bg-2.jpg');" data-stellar-background-ratio='0.5')
    .overlay
    .container
      .row.no-gutters.slider-text.js-fullheight.align-items-end.justify-content-center
        .col-md-9.ftco-animate.pb-5
          h2.mb-0.bread Contact Us
          p.breadcrumbs
            span.mr-2
              a(href='index.html')
                | Home 
                i.ion-ios-arrow-forward
            span
              | Contact 
              i.ion-ios-arrow-forward
  section.contact-section.bg-light
    .container
      .row.no-gutters.d-flex.contact-info
        .col-md-3.d-flex
          .align-self-stretch.box.p-4.py-md-5.text-center
            .icon.d-flex.align-items-center.justify-content-center
              span.icon-map-signs
            h3.mb-4 Địa chỉ 
            p 247 Đồng Văn Cống, Phường An Thới, Quận Bình Thủy, Thành phố Cần Thơ.
        .col-md-3.d-flex
          .align-self-stretch.box.p-4.py-md-5.text-center
            .icon.d-flex.align-items-center.justify-content-center
              span.icon-phone2
            h3.mb-4 Số điện thoại
            p
              a(href='tel://1234567920') + 84 774866478
        .col-md-3.d-flex
          .align-self-stretch.box.p-4.py-md-5.text-center
            .icon.d-flex.align-items-center.justify-content-center
              span.icon-paper-plane
            h3.mb-4 Đại chỉ Email 
            p
              a(href='mailto:info@yoursite.com')  ngthicamvan98@gmail.com
        .col-md-3.d-flex
          .align-self-stretch.box.p-4.py-md-5.text-center
            .icon.d-flex.align-items-center.justify-content-center
              span.icon-globe
            h3.mb-4 Website
            p
              a(href='#') yoursite.com
  section.ftco-section.ftco-no-pt.ftco-no-pb.contact-section
    .container-fluid.px-0
      .row.no-gutters.block-9
        .col-md-6.order-md-last.d-flex
          form.bg-light.p-5.contact-form(action='#')
            .form-group
              input.form-control(type='text' placeholder='Your Name')
            .form-group
              input.form-control(type='text' placeholder='Your Email')
            .form-group
              input.form-control(type='text' placeholder='Subject')
            .form-group
              textarea.form-control(name='' id='' cols='30' rows='7' placeholder='Message')
            .form-group
              input.btn.btn-primary.py-3.px-5(type='submit' value='Send Message')
        .col-md-6.d-flex
          #map.bg-white
