extends layout

block content
  section.ftco-section.ftco-no-pt.ftco-no-pb.mb-4
    .container.p-4
      .row.no-gutters.justify-content-center.mb-5.pb-2.mt-5
        .col-md-6.text-center.heading-section.ftco-animate
          h1.big Gallery
          h2.mb-4 QUẢN LÍ SẢN PHẨM
          p
            | Những sản phẩm bán chạy nhất của shop, đem đến chất lượng cho khách hàng sử dụng.
    .container-fluid.p-0
      .row.no-gutters
        each val in products
          .col-md-4.col-lg-4.ftco-animate
            .project
              img.img-fluid(src='images/Bestseller/best2.jpg' alt='Colorlib Template')
              .text
                p
                  strong.text-light Tên sản phẩm: #{val.name}
                p
                  strong.text-light Giá: #{val.unitPrice}
                p
                  strong.text-light Giảm giá: #{val.discount}
                p
                  strong.text-light Nhà sản xuất: #{val.producer}
                p
                  strong.text-light Mô tả: #{val.description}
                div.float-right
                  a.text-light.btn.btn-info.p-2.px-4 Sửa
                  a.text-light.btn.btn-danger.ml-2.p-2.px-4 Xóa
              a.icon.image-popup.d-flex.justify-content-center.align-items-center(href='images/Bestseller/best2.jpg')
                span.icon-expand
  include footer.pug